{
  "hosting": {
    "public": "frontend/dist",
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "source": "backend",
    "ignore": [
      "**node_modules**",
      "postDeploy",
      "preDeploy",
      "*.test.ts",
      "tsconfig.json",
      "*.ts",
      "*.md",
      "*.log",
      "*.tsbuildinfo",
      "*.bak"
    ],
    "runtime": "nodejs18"
  }
}