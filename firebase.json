{
  "hosting": {
    "public": "./frontend/dist",
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "source": "./backend",
    "ignore": [
      "node_modules",
      ".env.example"
    ]
  }
}